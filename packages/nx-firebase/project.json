{
	"name": "nx-firebase",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/nx-firebase/src",
	"projectType": "library",
	"tags": [],
	"targets": {
		"processFiles": {
			"executor": "nx:run-commands",
			"dependsOn": [
				"build"
			],
			"options": {
				"cwd": "{projectRoot}",
				"command": "node ../../scripts/process-executors-and-generators.js"
			}
		},
		"revertFiles": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "{projectRoot}",
				"command": "node ../../scripts/revert-executors-and-generators.js"
			}
		},
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "{projectRoot}/dist",
				"main": "packages/nx-firebase/src/index.ts",
				"tsConfig": "packages/nx-firebase/tsconfig.lib.json",
				"assets": [
					"packages/nx-firebase/*.md",
					{
						"input": "./packages/nx-firebase/src",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "./packages/nx-firebase/src",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "./packages/nx-firebase",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "./packages/nx-firebase",
						"glob": "executors.json",
						"output": "."
					}
				]
			}
		},
		"nx-release-publish": {
			"dependsOn": [
				"^nx-release-publish"
			],
			"executor": "@nx/js:release-publish",
			"options": {},
			"configurations": {},
			"parallelism": true
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "packages/nx-firebase/jest.config.ts",
				"passWithNoTests": true
			}
		}
	}
}
